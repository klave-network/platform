{
    "name": "hubber",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/hubber/src",
    "projectType": "application",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": [
                "{options.outputPath}"
            ],
            "defaultConfiguration": "production",
            "options": {
                "platform": "node",
                "outputPath": "dist/apps/hubber",
                "format": [
                    "esm"
                ],
                "main": "apps/hubber/src/main.ts",
                "tsConfig": "apps/hubber/tsconfig.app.json",
                "assets": [
                    "apps/hubber/src/assets"
                ],
                "generatePackageJson": true,
                "external": [
                    "@klave/as-json",
                    "assemblyscript",
                    "typescript",
                    "visitor-as"
                ],
                "esbuildConfig": "apps/hubber/esbuild.config.js"
            },
            "configurations": {
                "development": {
                    "watch": true
                },
                "production": {
                    "optimization": true,
                    "minify": true
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "hubber:build"
            },
            "configurations": {
                "development": {
                    "watch": true,
                    "buildTarget": "hubber:build:development"
                },
                "production": {
                    "buildTarget": "hubber:build:production"
                }
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": [
                "{options.outputFile}"
            ]
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "apps/hubber/jest.config.ts"
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "trackDeps": true,
                "changelogHeader": "# Changelog",
                "tagPrefix": "{projectName}@",
                "commitMessageFormat": "chore({projectName}): Release version ${version}",
                "postTargets": [
                    "hubber:build"
                ]
            }
        },
        "docker-build": {
            "dependsOn": [
                "build"
            ],
            "command": "docker build --platform linux/amd64 -f apps/hubber/Dockerfile . -t hubber"
        }
    }
}