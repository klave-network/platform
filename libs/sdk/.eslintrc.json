{
    "extends": [
        "../../.eslintrc.js"
    ],
    "ignorePatterns": [
        "!**/*",
        "index.ts",
        "bin/**",
        "assembly/**"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "parserOptions": {
                "project": [
                    "libs/sdk/tsconfig.*?.json"
                ]
            },
            "rules": {
                "@nx/enforce-module-boundaries": [
                    "error",
                    {
                        "allow": [],
                        "depConstraints": [
                            {
                                "sourceTag": "*",
                                "onlyDependOnLibsWithTags": [
                                    "*"
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        }
    ]
}