{
    "name": "deployer",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/deployer/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/libs/deployer",
                "main": "libs/deployer/src/index.ts",
                "tsConfig": "libs/deployer/tsconfig.lib.json",
                "assets": [
                    "libs/deployer/*.md",
                    "libs/deployer/src/*.mjs"
                ]
            }
        },
        "publish": {
            "command": "node tools/scripts/publish.mjs deployer {args.ver} {args.tag}",
            "dependsOn": [
                "build"
            ]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/deployer/**/*.ts",
                    "libs/deployer/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "libs/deployer/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}