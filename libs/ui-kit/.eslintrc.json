{
    "extends": [
        "../../.eslintrc.js"
    ],
    "ignorePatterns": [
        "!**/*"
    ],
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx",
                "*.js",
                "*.jsx"
            ],
            "parserOptions": {
                "project": [
                    "libs/ui-kit/tsconfig.*?.json"
                ]
            },
            "rules": {
                "@nx/enforce-module-boundaries": [
                    "error",
                    {
                        "allow": [
                            "../../tools/scripts/gitInfo.mjs"
                        ],
                        "depConstraints": [
                            {
                                "sourceTag": "*",
                                "onlyDependOnLibsWithTags": [
                                    "*"
                                ]
                            }
                        ]
                    }
                ]
            }
        },
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "rules": {}
        },
        {
            "files": [
                "*.js",
                "*.jsx"
            ],
            "rules": {}
        }
    ]
}